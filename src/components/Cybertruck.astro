---
import Section from "./Section.astro"
---

<Section
    color="black"
    id="cybertruck"
>
    <div slot="footer" class="gap-x-6 flex mx-auto">
        <a
        class=" bg-white opacity-80 text-sm rounded font-medium text-black px-20 py-2 transition-colors hover:border-gray-500 hover:bg-gray-500 hover:text-white inline-flex justify-center items-center"
        href="#"
        >
            Order Now</a
        >
        <a
        class="bg-black opacity-80  border-[3px] border-black text-sm rounded font-medium px-20 py-2 transition-colors hover:bg-black hover:text-white inline-flex justify-center items-center text-white"
        href="#"
        >
            Learn More</a
        >
    </div>

    <img
        slot="background"
        alt="Cybertruck"
        class="h-full w-full object-cover object-center"
        src="./public/cybertruck.avif"
        id="bg-image-cybertruck"
    />
</Section>

<script>
    function isEdge() {
        if (
            navigator.userAgent.indexOf("Edge") > -1 ||
            navigator.userAgent.indexOf("Edg") > -1
        ) {
            return true
        } else {
            return false
        }
    }

    let imageElement = document.querySelector(
        "#bg-image-cybertruck"
    ) as HTMLImageElement

    if (isEdge()) {
        imageElement.src = "./public/cybertruck.webp"
    } else {
        imageElement.src = "./public/cybertruck.avif"
    }
</script>
